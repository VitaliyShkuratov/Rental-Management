@model PropertyRentalManagement.ViewModels.HomeDetailViewModel

@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>

<div class="container" style="height:auto; margin-bottom:20px">
    <div>
        <h4>Property</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Property.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Property.Address)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Property.AppartmentNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Property.AppartmentNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Property.NumberRooms)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Property.NumberRooms)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Property.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Property.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Property.BuildingType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Property.BuildingType.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Property.RentStarted)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Property.RentStarted)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Property.RentFinished)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Property.RentFinished)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Property.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Property.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Property.Available)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Property.Available)
            </dd>

        </dl>
    </div>
    <div>
        @foreach (var item in Model.ImageFileNames)
        {
            <a data-toggle="modal" data-target="#img-thumbnail@item" class="img_modal modal-content" href="@Url.Content(item)" style="width:500px; height:200px">
                <img id="img-thumbnail@item"  class="img-thumbnail" src="@Url.Content(item)" alt="property image" style="width:185px; height:200px; margin-left:5px; margin-top:3px; border-radius:5px; float:left" />
            </a>
        }

    </div>
</div>
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
